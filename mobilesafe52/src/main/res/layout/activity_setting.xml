<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:joey="http://com.joey.mobilesafe52"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.joey.mobilesafe52.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        joey:desc_off="自动更新已关闭"
        joey:desc_on="自动更新已开启"
        joey:itemTitle="自动更新设置" />

    <com.joey.mobilesafe52.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        joey:desc_off="归属地显示已经关闭"
        joey:desc_on="归属地显示已经开启"
        joey:itemTitle="电话归属地显示设置" />

    <com.joey.mobilesafe52.view.SettingItemView
        android:id="@+id/siv_watch_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        joey:desc_off="看门狗已经关闭"
        joey:desc_on="看门狗已经打开"
        joey:itemTitle="看门狗设置" />

    <com.joey.mobilesafe52.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.joey.mobilesafe52.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.joey.mobilesafe52.view.SettingItemView
        android:id="@+id/siv_call_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        joey:desc_off="黑名单拦截关闭"
        joey:desc_on="黑名单拦截开启"
        joey:itemTitle="黑名单拦截设置" />
</LinearLayout>
